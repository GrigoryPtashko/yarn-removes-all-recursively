  "dependencies": {
    "babel-polyfill": "^6.13.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-fbjs": "^2.0.0",
    "babel-register": "^6.14.0",
    "body-parser": "^1.15.2",
    "css-loader": "^0.25.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "imports-loader": "^0.6.5",
    "node-sass": "^3.10.0",
    "postcss-loader": "^0.13.0",
    "postcss-theme": "^1.1.1",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.5"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "pb": "npm run clean && webpack --config webpack.prod.config.js",
    "db": "npm run clean && webpack --config webpack.dev.config.js",
    "test": "jest",
    "wds": "webpack-dev-server --config webpack.dev.config.js --hot --inline --progress --content-base ./build"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "babel"
    ],
    "extends": [
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "no-underscore-dangle": 0,

      "generator-star-spacing": 0,
      "new-cap": 0,
      "array-bracket-spacing": 0,
      "object-shorthand": 0,
      "arrow-parens": 0,
      "no-await-in-loop": 0,
      "flow-object-type": 0,
      "babel/generator-star-spacing": 1,
      "babel/new-cap": 1,
      "babel/array-bracket-spacing": 1,
      "babel/object-shorthand": 1,
      "babel/arrow-parens": 0,
      "babel/no-await-in-loop": 1,
      "babel/flow-object-type": 1
    }
  }
